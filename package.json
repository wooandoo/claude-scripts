{
	"name": "claude-scripts",
	"version": "1.0.0",
	"main": "src/index.ts",
	"type": "module",
	"bin": {
		"claude-scripts": "src/index.ts"
	},
	"scripts": {
		"start": "bun run src/index.ts",
		"build": "bun build src/index.ts --outdir=dist --target=node18 --external:commander",
		"check": "run-p check:biome check:typescript",
		"check:typescript": "tsgo -p tsconfig.json",
		"check:biome": "biome check --write"
	},
	"dependencies": {
		"commander": "^14.0.0",
		"ts-morph": "^27.0.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.3",
		"@tsconfig/bun": "^1.0.8",
		"@types/node": "^24.3.1",
		"@typescript/native-preview": "7.0.0-dev.20250721.1",
		"npm-run-all": "^4.1.5"
	}
}
